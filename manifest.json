{
  "name": "Bin Day Extension",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Shows The Next Bin To Be Collected. Made By Adem.",
  "permissions": [ "storage", "alarms", "notifications" ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Bin Day",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
